{
  "name": "body-double",
  "version": "0.1.0",
  "description": "AI-powered body doubling companion for focus and productivity",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:prompts": "tsx src/test-harness.ts",
    "test:prompts:watch": "tsx watch src/test-harness.ts",
    "test:batch": "tsx src/batch-test.ts",
    "test:batch:dry": "tsx src/batch-test.ts --dry-run",
    "build": "tsc",
    "dev": "tsx watch src/server/index.ts",
    "dev:server": "tsx watch src/server/index.ts",
    "db:setup": "tsx src/server/db/setup.ts"
  },
  "keywords": [
    "adhd",
    "productivity",
    "body-doubling",
    "ai-companion"
  ],
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "better-sqlite3": "^11.7.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "uuid": "^11.0.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^2.1.9",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  }
}
